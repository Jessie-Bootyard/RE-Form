
<div class="list-can">
  <tr id="<%= dom_id(user) %>" 
    data-stream-enter-class="animate-item-in" 
    data-stream-exit-class="animate-item-out">
    <td class= "list-color"><%= user.id %></td>
      <td class="username"><%= link_to user.username, 
        user_path(user), 
        data: { turbo_frame: "_top" } %>
      </td>
    <td class= "list-color"><%= user.email %></td>
    <td class= "list-color"><%= user.password %></td>
    <td><%= link_to "Edit", edit_user_path(user), class: "edit-btn", data: { turbo_frame: "_top" } %></td>
    <td><%= button_to "Delete", user_path(user), method: :delete, class: "delete-btn" %></td>
  </tr>
</div>